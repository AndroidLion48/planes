<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="settingsData" type="com.planes.android.login.LoginViewModel"/>
    </data>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/layout_background_start">

            <TextView
                android:id="@+id/login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:text="@string/username" />
            <EditText
                android:id="@+id/username_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/login_username"
                android:layout_below="@id/login_username"
                android:text="@={settingsData.m_Username}"/>
            <TextView
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_alignLeft="@id/username_edittext"
                android:layout_below="@id/username_edittext"
                android:text="@string/password"/>
            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/login_password"
                android:layout_below="@id/login_password"
                android:inputType="textPassword"
                android:text="@={settingsData.m_Password}"/>
            <CheckBox
                android:id="@+id/secure_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/hide_password"
                android:textSize="10dp"
                android:layout_alignLeft="@id/password_edittext"
                android:layout_below="@id/password_edittext"/>
            <Button
                android:id="@+id/credentials_preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credentials_preferences"
                android:textSize="10dp"
                android:layout_alignLeft="@id/secure_check"
                android:layout_below="@id/secure_check"/>
            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_alignRight="@id/credentials_preferences"
                android:layout_below="@id/credentials_preferences"/>
        </RelativeLayout>


</layout>
